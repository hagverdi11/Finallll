@model SizeCreateVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card" style="margin-left: 10px;">
                    <div class="card-body">
                        <h1>Size</h1>
                        <form asp-controller="Size" asp-action="Create" class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label class="my-4" for="exampleInputUsername1">Name</label>
                                <textarea class="form-control rounded-0" id="title-area" rows="3" asp-for="Name"></textarea>
                                <span class="text-danger my-1" asp-validation-for="Name"></span>
                            </div>
                            <button type="submit" class="mybutton">Submit</button>
                            <a asp-controller="Size" asp-action="Index" class="mybutton">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationPartial" />


}

