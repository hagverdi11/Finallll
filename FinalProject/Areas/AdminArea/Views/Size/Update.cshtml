@model SizeEditVM
@{
    ViewData["Title"] = "Update";
}
<div class="container">
    <h1>Size</h1>
    <form asp-action="Update" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label class="my-4" for="exampleInputUsername1">Name</label>
            <textarea class="form-control rounded-0" id="title-area" rows="3" asp-for="Name"></textarea>
            <span class="text-danger my-1" asp-validation-for="Name"></span>
        </div>
        <button type="submit" class="mybutton">Update</button>
        <a class="mybutton" asp-controller="Size" asp-action="Index">Back</a>
    </form>

</div>

@section Scripts{
    <partial name="_ValidationPartial" />
}
