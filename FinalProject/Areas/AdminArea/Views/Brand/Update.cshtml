@model BrandEditVM
@{
    ViewData["Title"] = "Update";
}


<div class="container">
    <h3>Brand</h3>
    <form asp-action="Update" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label class="my-4" for="exampleInputUsername1">Title</label>
            <input class="form-control rounded-0" rows="3" asp-for="Name">
            <span class="text-danger my-1" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <input class="form-control mybutton" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <button type="submit" class="mybutton">Update</button>
        <a class="mybutton" asp-controller="Brand" asp-action="Index">Back</a>
    </form>

</div>
