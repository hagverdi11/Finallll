@model CategoryEditVM
@{
    ViewData["Title"] = "Update";
}
<div class="container">
    <h1>Category</h1>
    <form asp-action="Update" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label class="my-4" for="exampleInputUsername1">Name</label>
            <textarea class="form-control rounded-0" id="title-area" rows="3" asp-for="Name"></textarea>
            <span class="text-danger my-1" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputUsername1">Icon</label>
            <input minlength="" type="text" class="form-control" asp-for="Icon">
            <span class="text-danger my-1" asp-validation-for="Icon"></span>
        </div>
        <button type="submit" class="mybutton">Update</button>
        <a class="mybutton" asp-controller="ProductCategory" asp-action="Index">Back</a>
    </form>

</div>

@section Scripts{

}
