@model ProductCategory
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <span class="text-danger">@ViewBag.Message</span>
                <div class="col-md-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-description">
                                Category
                            </p>
                            <form asp-controller="ProductCategory" asp-action="Create" class="forms-sample" method="post">
                                <div class="form-group">
                                    <label for="exampleInputUsername1">Name</label>
                                    <input minlength="" type="text" class="form-control" asp-for="Name">
                                    <span class="text-danger my-1" asp-validation-for="Name"></span>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputUsername1">Icon</label>
                                    <input minlength="" type="text" class="form-control" asp-for="Icon">
                                    <span class="text-danger my-1" asp-validation-for="Icon"></span>
                                </div>
                                <button type="submit" class="mybutton">Submit</button>
                                <a asp-controller="ProductCategory" asp-action="Index" class="btn btn-light">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationPartial" />
}