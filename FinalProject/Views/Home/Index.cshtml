@model HomeVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <h1></h1>
    <div class="slider">
        <div class="container">
            <div class="wrapper">
                <div class="myslider swiper">
                    <div class="swiper-wrapper">
                        @foreach (var item in Model.sliders)
                        {
                            <div class="swiper-slide">
                                <div class="item">
                                    <div class="image object-cover">
                                        <img src="~/assets/slider/@item.Image" alt="slider">
                                    </div>
                                    <div class="text-content flexcol">
                                        <h4>@Html.Raw(item.Title)</h4>
                                        <h2>
                                            <span>@Html.Raw(item.Header)</span> <br>
                                            <span>@Html.Raw(item.Description)</span>
                                        </h2>
                                        <a asp-controller="Shop" asp-action="index" class="primary-button">Shop Now</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="swiper-pagination"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- slider end -->

    <div class="brands">
        <div class="container">
            <div class="wrapper flexitem">

                @foreach (var item in Model.Brands)
                {
                    <div class="item">
                        <a asp-controller="Shop" asp-action="Index">
                            <img src="~/assets/brands/@item.Image" alt="@item.Name">
                        </a>
                    </div>

                }


            </div>
        </div>
    </div>

    <!-- brands end -->

    <div class="trending">
        <div class="container">
            <div class="wrapper">
                <div class="sectop flex-item">
                    <h2>
                        <span class="circle"></span>
                        <span>Trending Products</span>
                    </h2>
                </div>
                <div class="column">
                    <div class="flexwrap">
                        <div class="row products big">
                            <div class="item">
                                <div class="offer">
                                    <p>Best Deal</p>
                                </div>
                                @foreach (var item in Model.OfferProduct)
                                {
                                    <div data-id="@item.Id" class="media pr-id">
                                        <div class="image">
                                            <a asp-controller="ProductDetail" asp-action="index" asp-route-id="@item.Id">
                                                <img data-id="@item.Id" class="pr-image" src="~/assets/products/@item.ProductImages.FirstOrDefault(m => m.IsMain)?.Image" alt="">
                                            </a>
                                        </div>
                                        <div class="hoverable">
                                            <ul>
                                                <li class="active">
                                                    <a href="#"><i data-id="@item.Id" class="ri-heart-fill"></i></a>
                                                </li>
                                                <li><a href="#"><i data-id="@item.Id" class="ri-shopping-basket-fill"></i></a></li>

                                            </ul>
                                        </div>
                                        <div class="discount circle flexcenter">
                                            <span>@item.Discount%</span>
                                        </div>
                                    </div>
                                    <div class="content">
                                        <div class="rating">
                                            <div class="stars"></div>
                                            <div class="mini-text">(18)</div>
                                        </div>
                                        <h3 class="main-links">
                                            <a data-id="@item.Id" class="pr-title" href="#">@item.Title</a>
                                        </h3>
                                        <div class="price">
                                            <span data-id="@item.Id" class="current pr-disc-price">$@(item.Price-(item.Price/100)*item.Discount)</span>
                                            <span class="normal mini-text">$@item.Price</span>
                                        </div>
                                        <div class="stock mini-text">
                                            <div class="qty">
                                                <span>Stock: <strong class="qty-available">@item.StockCount</strong></span>
                                            </div>
                                            <div class="bar">
                                                <div class="available"></div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="row products mini">
                            @foreach (var item in Model.FirstTrendingProducts)
                            {
                                <div data-id="@item.Id" class="item pr-id">
                                    <div class="media">
                                        <div class="thumbnail object-cover">
                                            <a asp-controller="ProductDetail" asp-action="index" asp-route-id="@item.Id">
                                                <img data-id="@item.Id" class="pr-image" src="~/assets/products/@item.ProductImages.FirstOrDefault(m => m.IsMain)?.Image" alt="">
                                            </a>
                                        </div>
                                        <div class="hoverable">
                                            <ul>
                                                <li class="active">
                                                    <a href="#"><i data-id="@item.Id" class="ri-heart-fill"></i></a>
                                                </li>
                                                <li><a href="#"><i data-id="@item.Id" class="ri-shopping-basket-fill"></i></a></li>
                                            </ul>
                                        </div>
                                     
                                    </div>
                                    <div class="content">
                                        <h3 class="main-links">
                                            <a data-id="@item.Id" class="pr-title" href="#">@item.Title</a>
                                        </h3>
                                        <div class="rating">
                                            <div class="stars"></div>
                                            <div class="mini-text">(2,548)</div>
                                        </div>
                                        <div class="price">
                                            <span data-id="@item.Id" class="current pr-disc-price">$@item.Price</span>
                                            <span class="normal mini-text">$198.99</span>
                                        </div>
                                        
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="row products mini">
                            @foreach (var item in Model.SecondTrendingProducts)
                            {
                                <div data-id="@item.Id" class="item pr-id">
                                    <div class="media">
                                        <div class="thumbnail object-cover">
                                            <a asp-controller="ProductDetail" asp-action="index" asp-route-id="@item.Id">
                                                <img class="pr-image" data-id="@item.Id" src="~/assets/products/@item.ProductImages.FirstOrDefault(m => m.IsMain)?.Image" alt="">
                                            </a>
                                        </div>
                                        <div class="hoverable">
                                            <ul>
                                                <li class="active">
                                                    <a  href="#"><i data-id="@item.Id" class="ri-heart-fill"></i></a>
                                                </li>
                                                <li><a  href="#"><i data-id="@item.Id" class="ri-shopping-basket-fill"></i></a></li>
                                            </ul>
                                        </div>
                                       
                                    </div>
                                    <div class="content">
                                        <h3 class="main-links">
                                            <a class="pr-title" data-id="@item.Id" href="#">@item.Title</a>
                                        </h3>
                                        <div class="rating">
                                            <div class="stars"></div>
                                         
                                        </div>
                                        <div class="price">
                                            <span data-id="@item.Id" class="current pr-disc-price">$@item.Price</span>
                                            <span class="normal mini-text">$198.99</span>
                                        </div>
                                        <div class="mini-text">
                                           
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Feature -->
    <div class="features">
        <div class="container">
            <div class="wrapper">
                <div class="column">
                    <div class="sectop flexitem">
                        <h2>
                            <span class="circle"></span>
                            <span>Featured Products</span>
                        </h2>
                        <div class="second-links">
                            <a asp-controller="Shop" asp-action="Index" class="view-all">
                                View All
                                <i class="ri-arrow-right-line"></i>
                            </a>
                        </div>
                    </div>
                    <div class="products main flexwrap">

                        @foreach (var item in Model.LastProducts)
                        {
                            <div data-id="@item.Id" class="item pr-id">
                                <div class="media">
                                    <div class="thumbnail object-cover">
                                        <a asp-controller="ProductDetail" asp-action="Index" asp-route-id="@item.Id">
                                            <img data-id="@item.Id" class="pr-image" src="~/assets/products/@item.ProductImages.FirstOrDefault(m => m.IsMain)?.Image" alt="">
                                        </a>
                                    </div>
                                    <div class="hoverable">
                                        <ul>
                                            <li class="active">
                                                <a href="#"><i data-id="@item.Id" class="ri-heart-fill"></i></a>
                                            </li>
                                            <li><a href="#"><i data-id="@item.Id" class="ri-shopping-basket-fill"></i></a></li>
                                        </ul>
                                    </div>
                                   
                                </div>
                                <div class="content">
                                    <div class="rating">
                                        <div class="stars"></div>
                                        <div class="mini-text">(1,955)</div>
                                    </div>
                                    <h3><a data-id="@item.Id" class="pr-title" href="#">@item.Title</a></h3>
                                    <div class="price">
                                        <span data-id="@item.Id" class="current pr-disc-price">@((item.Price-((item.Price/100)*item.Discount)).ToString("##.00"))</span>
                                        <span class="normal mini-text">$@item.Price</span>
                                    </div>
                                </div>
                            </div>

                        }

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Banners -->
    @await Component.InvokeAsync("Banner");


</main>

