@model IEnumerable<Product>

    @foreach (var item in Model)
    {
        <div class="item pr-id" data-id="@item.Id ">
            <div class="media">
                <div class="thumbnail object-cover">
                    <a asp-controller="ProductDetail" asp-action="Index" asp-route-id="@item.Id">
                        <img data-id="@item.Id" class="pr-image" src="assets/products/@item.ProductImages.FirstOrDefault(m=>m.IsMain)?.Image" alt="">
                    </a>
                </div>
                <div class="hoverable">
                    <ul>
                        <li class="active">
                            <a href="#">
                                <i data-id="@item.Id" class="ri-heart-fill wishlist"></i>
                            </a>
                        </li>

                        <li><a href="#"><i data-id="@item.Id" class="ri-shopping-basket-fill"></i></a></li>
                        
                    </ul>
                </div>
                <div class="discount circle flexcenter">
                    <span>@item.Discount%</span>
                </div>
            </div>
            <div class="content">
                <div class="rating">
                    <div class="stars"></div>
                    <div class="mini-text">(2,548)</div>
                </div>
                <h3 class="main-links">
                    <a href="#">
                        <p data-id="@item.Id" class="pr-title">@item.Title</p>
                    </a>
                </h3>
                <div class="price">
                    <span data-id="@item.Id" class="current pr-disc-price">$@(item.Price - (item.Price/100)*item.Discount)</span>
                    <span class="normal mini-text">$@item.Price</span>
                </div>
            </div>
        </div>

    }

