@model RegisterVM
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_defaultLayout.cshtml";
}

<section class="signup">
    <div class="container1">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Sign up</h2>
                <form asp-controller="Account" asp-action="register" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="name"><i class="ri-account-circle-fill"></i></label>
                        <input asp-for="FullName" type="text" id="name" placeholder="Your Name" required />
                        <span asp-validation-for="FullName" style="color: red"> </span>
                    </div>
                    <div class="form-group">
                        <label for="name"><i class="ri-account-circle-fill"></i></label>
                        <input asp-for="Username" type="text" id="name" placeholder="User Name" required />
                        <span asp-validation-for="Username" style="color: red"> </span>
                    </div>
                    <div class="form-group">
                        <label for="email"><i class="ri-mail-fill"></i></label>
                        <input asp-for="Email" type="email" id="email" placeholder="Your Email" required />
                        <span asp-validation-for="Email" style="color: red"> </span>
                    </div>
                    <div class="form-group">
                        <label for="pass"><i class="ri-lock-2-fill"></i></label>
                        <input asp-for="Password" id="pass" placeholder="Password" required />
                        <span asp-validation-for="Password" style="color: red"> </span>
                    </div>
                    <div class="form-group">
                        <label for="re-pass"><i class="ri-lock-unlock-fill"></i></label>
                        <input asp-for="ConfirmPassword" id="re_pass" placeholder="Repeat your password" required />
                        <span asp-validation-for="ConfirmPassword" style="color: red"> </span>
                    </div>
                    <div class="form-group form-button ">
                        <button type="submit" id="signup" class="webButton" value="Register">Register</button>
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="~/assets/signing/signup-image.jpg" alt="sing up image"></figure>
            </div>
        </div>
    </div>
</section>


@section css {
    <link href="~/assets/sign-up.css" rel="stylesheet" />
}

